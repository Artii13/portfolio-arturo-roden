---
// GridBackground Component - Efecto Linterna (Grid solo visible alrededor del cursor)
---

<div id="grid-background" class="grid-container fixed inset-0 z-[5] pointer-events-none overflow-hidden">
  <canvas id="grid-canvas"></canvas>
</div>

<style>
  .grid-container {
    width: 100vw;
    height: 100vh;
  }

  #grid-canvas {
    width: 100%;
    height: 100%;
    /* El canvas empieza con mask centrado - invisible hasta que mueves el mouse */
    -webkit-mask-image: radial-gradient(400px circle at 50% 50%, black, transparent);
    mask-image: radial-gradient(400px circle at 50% 50%, black, transparent);
  }

  /* Ocultar en m贸vil/tablet - no hay hover ni rat贸n */
  @media (max-width: 1024px) {
    .grid-container {
      display: none !important;
    }
  }
</style>

<script is:inline>
(function() {
  document.addEventListener('DOMContentLoaded', function() {
    // No ejecutar en m贸vil/tablet (no tiene sentido sin rat贸n)
    if (window.innerWidth < 1024 || 'ontouchstart' in window) {
      console.log(' Grid 3D desactivado en m贸vil');
      return;
    }
    
    const canvas = document.getElementById('grid-canvas');
    if (!canvas) return;
    
    const ctx = canvas.getContext('2d');
    let width, height;
    
    // Configuraci贸n del grid
    const gridSize = 50;
    const dotRadius = 2;
    const gridColor = 'rgba(80, 80, 80, 0.7)';
    const lineColor = 'rgba(80, 80, 80, 0.35)';
    
    function resize() {
      const dpr = window.devicePixelRatio || 1;
      width = window.innerWidth;
      height = window.innerHeight;
      canvas.width = width * dpr;
      canvas.height = height * dpr;
      canvas.style.width = width + 'px';
      canvas.style.height = height + 'px';
      ctx.scale(dpr, dpr);
      draw(); // Redibujar al cambiar tama帽o
    }
    
    function draw() {
      // Limpiar canvas
      ctx.clearRect(0, 0, width, height);
      
      const cols = Math.ceil(width / gridSize) + 1;
      const rows = Math.ceil(height / gridSize) + 1;
      
      // Dibujar l铆neas horizontales
      ctx.strokeStyle = lineColor;
      ctx.lineWidth = 0.8;
      for (let j = 0; j <= rows; j++) {
        const y = j * gridSize;
        ctx.beginPath();
        ctx.moveTo(0, y);
        ctx.lineTo(width, y);
        ctx.stroke();
      }
      
      // Dibujar l铆neas verticales
      for (let i = 0; i <= cols; i++) {
        const x = i * gridSize;
        ctx.beginPath();
        ctx.moveTo(x, 0);
        ctx.lineTo(x, height);
        ctx.stroke();
      }
      
      // Dibujar grid de puntos (encima de las l铆neas)
      ctx.fillStyle = gridColor;
      for (let i = 0; i <= cols; i++) {
        for (let j = 0; j <= rows; j++) {
          const x = i * gridSize;
          const y = j * gridSize;
          
          ctx.beginPath();
          ctx.arc(x, y, dotRadius, 0, Math.PI * 2);
          ctx.fill();
        }
      }
    }
    
    // Actualizar posici贸n del mask cuando mueves el mouse
    document.addEventListener('mousemove', function(e) {
      const mouseX = e.clientX;
      const mouseY = e.clientY;
      
      // Actualizar el mask para seguir el cursor
      const maskValue = `radial-gradient(400px circle at ${mouseX}px ${mouseY}px, black, transparent)`;
      canvas.style.maskImage = maskValue;
      canvas.style.webkitMaskImage = maskValue;
    });
    
    // Ocultar el grid cuando el mouse sale de la ventana
    document.addEventListener('mouseleave', function() {
      canvas.style.maskImage = 'radial-gradient(0px circle at 50% 50%, black, transparent)';
      canvas.style.webkitMaskImage = 'radial-gradient(0px circle at 50% 50%, black, transparent)';
    });
    
    // Mostrar el grid cuando el mouse entra a la ventana
    document.addEventListener('mouseenter', function(e) {
      const mouseX = e.clientX;
      const mouseY = e.clientY;
      const maskValue = `radial-gradient(400px circle at ${mouseX}px ${mouseY}px, black, transparent)`;
      canvas.style.maskImage = maskValue;
      canvas.style.webkitMaskImage = maskValue;
    });
    
    // Inicializar
    resize();
    window.addEventListener('resize', resize);
  });
})();
</script>
