---
// Metrics Section - NÃºmeros de impacto
const metrics = [
  {
    number: "40+",
    unit: "horas/semana",
    description: "Tiempo que tus sistemas ahorran"
  },
  {
    number: "<30",
    unit: "segundos",
    description: "Respuesta de tu agente IA"
  },
  {
    number: "24/7",
    unit: "/365",
    description: "Tus sistemas nunca duermen"
  }
];
---

<section id="metrics" class="py-12 md:py-20 bg-[#0a0a0a]">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      {metrics.map((metric, index) => (
        <div class="text-center reveal-up" style={`transition-delay: ${index * 0.1}s`}>
          <div class="flex items-baseline justify-center gap-1 metric-number">
            <span class="text-5xl md:text-6xl lg:text-7xl font-bold text-white tracking-tight">
              {metric.number}
            </span>
            <span class="text-xl md:text-2xl text-gray-500 font-medium">
              {metric.unit}
            </span>
          </div>
          <p class="mt-3 text-gray-400 text-sm md:text-base">
            {metric.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .metric-number {
    transition: transform 0.3s ease;
  }
  
  .metric-number:hover {
    transform: scale(1.05);
  }
</style>

