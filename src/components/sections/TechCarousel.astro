---
// Tech Carousel - Stack Tecnológico
const technologies = [
  { name: 'n8n', type: 'icon', url: 'https://cdn.simpleicons.org/n8n/white' },
  { name: 'OpenAI', type: 'icon', url: 'https://cdn.simpleicons.org/openai/white' },
  { name: 'Make', type: 'icon', url: 'https://cdn.simpleicons.org/integromat/white' },
  { name: 'Fireflies', type: 'text', text: 'Fireflies' },
  { name: 'Retell AI', type: 'text', text: 'Retell' },
  { name: 'Fathom', type: 'text', text: 'Fathom' },
  { name: 'GoHighLevel', type: 'text', text: 'GHL' }
];
---

<section class="tech-section bg-[#0a0a12] py-16">
  <div class="max-w-7xl mx-auto px-4">
    <p class="text-center text-gray-400 tracking-widest text-sm mb-10 uppercase">STACK TECNOLÓGICO</p>
    
    <div class="tech-carousel-wrapper max-w-[900px] mx-auto">
      <div class="tech-carousel-track overflow-hidden">
        <div class="tech-carousel-content flex gap-6 animate-scroll">
          <!-- Primera copia -->
          {technologies.map((tech) => (
            <div class="tech-card bg-white/5 border border-white/10 rounded-xl px-6 py-4 flex items-center justify-center flex-shrink-0">
              {tech.type === 'icon' ? (
                <img 
                  src={tech.url} 
                  alt={tech.name}
                  class="h-8 w-auto"
                  loading="lazy"
                />
              ) : (
                <span class="text-white font-semibold text-lg">{tech.text}</span>
              )}
            </div>
          ))}
          <!-- Segunda copia (duplicado para loop infinito) -->
          {technologies.map((tech) => (
            <div class="tech-card bg-white/5 border border-white/10 rounded-xl px-6 py-4 flex items-center justify-center flex-shrink-0">
              {tech.type === 'icon' ? (
                <img 
                  src={tech.url} 
                  alt={tech.name}
                  class="h-8 w-auto"
                  loading="lazy"
                />
              ) : (
                <span class="text-white font-semibold text-lg">{tech.text}</span>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .tech-section {
    background-color: #0a0a12;
  }
  
  .tech-carousel-track {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }
  
  .tech-carousel-content {
    width: max-content;
  }
  
  .tech-carousel-content:hover {
    animation-play-state: paused;
  }
  
  .tech-card {
    min-width: 80px;
    transition: transform 0.3s ease, background 0.3s ease;
  }
  
  .tech-card:hover {
    transform: scale(1.05);
    background: rgba(255, 255, 255, 0.08) !important;
  }
  
  .tech-card img {
    object-fit: contain;
  }
  
  @keyframes scroll-infinite {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-scroll {
    animation: scroll-infinite 25s linear infinite;
  }
  
  @media (max-width: 768px) {
    .tech-carousel-wrapper {
      max-width: 100%;
      padding: 0 1rem;
    }
    
    .tech-card {
      min-width: 70px;
      padding: 0.75rem 1rem;
    }
    
    .tech-card img {
      height: 28px;
    }
    
    .tech-card span {
      font-size: 0.875rem;
    }
  }
</style>
