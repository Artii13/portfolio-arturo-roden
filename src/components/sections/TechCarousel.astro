---
// Tech Carousel - Tecnologías que uso
const technologies = [
  { name: 'n8n', image: 'https://storage.googleapis.com/msgsndr/7HqbY9s62tYUT4L8oXfz/media/67e964591870f469ed48761c.jpeg' },
  { name: 'OpenAI', image: 'https://storage.googleapis.com/msgsndr/7HqbY9s62tYUT4L8oXfz/media/67e96459e519ed351f2a1136.jpeg' },
  { name: 'Make', image: 'https://storage.googleapis.com/msgsndr/7HqbY9s62tYUT4L8oXfz/media/67e96459c5f22a727aaf7d20.jpeg' },
  { name: 'Fireflies', image: 'https://storage.googleapis.com/msgsndr/7HqbY9s62tYUT4L8oXfz/media/67e96459379294805ee96880.jpeg' },
  { name: 'Retell AI', image: 'https://storage.googleapis.com/msgsndr/7HqbY9s62tYUT4L8oXfz/media/67e96459c5f22a7499af7d1f.jpeg' },
  { name: 'Fathom', image: 'https://storage.googleapis.com/msgsndr/7HqbY9s62tYUT4L8oXfz/media/67e964593792941bc4e96881.jpeg' },
  { name: 'GoHighLevel', image: 'https://assets.cdn.filesafe.space/7HqbY9s62tYUT4L8oXfz/media/67e96459c5f22ac16faf7d21.jpeg' }
];
---

<section class="tech-section bg-[#0a0a12] py-16">
  <div class="max-w-7xl mx-auto px-4">
    <p class="text-center text-gray-400 tracking-widest text-sm mb-8 uppercase">TECNOLOGÍA QUE USO</p>
    
    <div class="tech-carousel-wrapper max-w-[900px] mx-auto">
      <div class="tech-carousel-track overflow-hidden">
        <div class="tech-carousel-content flex gap-6 animate-scroll">
          <!-- Primera copia -->
          {technologies.map((tech) => (
            <div class="tech-card">
              <img src={tech.image} alt={tech.name} />
              <span>{tech.name}</span>
            </div>
          ))}
          <!-- Segunda copia (duplicado para loop infinito) -->
          {technologies.map((tech) => (
            <div class="tech-card">
              <img src={tech.image} alt={tech.name} />
              <span>{tech.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .tech-section {
    background-color: #0a0a12;
  }
  
  .tech-carousel-track {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }
  
  .tech-carousel-content {
    width: max-content;
  }
  
  .tech-carousel-content:hover {
    animation-play-state: paused;
  }
  
  .tech-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    flex-shrink: 0;
    min-width: 160px;
    transition: transform 0.3s ease, background 0.3s ease;
  }
  
  .tech-card:hover {
    transform: scale(1.05);
    background: rgba(255, 255, 255, 0.08);
  }
  
  .tech-card img {
    width: 24px;
    height: 24px;
    object-fit: contain;
    flex-shrink: 0;
  }
  
  .tech-card span {
    color: white;
    font-weight: 500;
    font-size: 0.875rem;
    white-space: nowrap;
  }
  
  @keyframes scroll-infinite {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-scroll {
    animation: scroll-infinite 25s linear infinite;
  }
  
  @media (max-width: 768px) {
    .tech-carousel-wrapper {
      max-width: 100%;
      padding: 0 1rem;
    }
    
    .tech-card {
      min-width: 140px;
      padding: 0.75rem 1.25rem;
    }
    
    .tech-card img {
      width: 20px;
      height: 20px;
    }
    
    .tech-card span {
      font-size: 0.75rem;
    }
  }
</style>
