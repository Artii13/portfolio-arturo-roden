<style>
  .platforms-carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    /* Fade suave hacia transparente en ambos lados */
    -webkit-mask-image: linear-gradient(
      to right, 
      transparent 0%, 
      rgba(0,0,0,0.3) 5%,
      rgba(0,0,0,0.7) 10%,
      black 15%, 
      black 85%, 
      rgba(0,0,0,0.7) 90%,
      rgba(0,0,0,0.3) 95%,
      transparent 100%
    );
    mask-image: linear-gradient(
      to right, 
      transparent 0%, 
      rgba(0,0,0,0.3) 5%,
      rgba(0,0,0,0.7) 10%,
      black 15%, 
      black 85%, 
      rgba(0,0,0,0.7) 90%,
      rgba(0,0,0,0.3) 95%,
      transparent 100%
    );
  }
  
  .platforms-carousel {
    display: flex;
    gap: 24px;
    animation: scroll 30s linear infinite;
    padding: 20px 0;
  }
  
  .platforms-carousel:hover {
    animation-play-state: paused;
  }
  
  .platform-item {
    flex: 0 0 180px;
    height: 90px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .platform-item img {
    max-width: 100%;
    max-height: 60px;
    object-fit: contain;
    background-color: rgba(255, 255, 255, 0.95);
    padding: 12px 20px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .platform-item img:hover {
    transform: scale(1.08);
    box-shadow: 0 8px 30px rgba(99, 102, 241, 0.25);
  }
  
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-180px * 7 - 24px * 7));
    }
  }
  
  @media (max-width: 768px) {
    .platform-item {
      flex: 0 0 150px;
      height: 80px;
    }
    
    .platform-item img {
      max-height: 50px;
      padding: 10px 16px;
    }
    
    .platforms-carousel-container {
      -webkit-mask-image: linear-gradient(
        to right, 
        transparent 0%, 
        rgba(0,0,0,0.5) 8%,
        black 15%, 
        black 85%, 
        rgba(0,0,0,0.5) 92%,
        transparent 100%
      );
      mask-image: linear-gradient(
        to right, 
        transparent 0%, 
        rgba(0,0,0,0.5) 8%,
        black 15%, 
        black 85%, 
        rgba(0,0,0,0.5) 92%,
        transparent 100%
      );
    }
    
    @keyframes scroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-150px * 7 - 24px * 7));
      }
    }
  }
</style>
