---
import { links } from '@/data/projects';

const currentPath = Astro.url.pathname;
const isHome = currentPath === '/' || currentPath === '';
---

<header class="navbar flex items-center justify-between">
  <!-- Logo -->
  <a href="/" class="flex items-center group cursor-pointer">
    <img 
      src="/images/logo.svg" 
      alt="Arturo RÃ³den - Logo" 
      class="logo"
      width="84"
      height="84"
    />
  </a>

  <!-- Nav Links (hidden on mobile) -->
  <nav class="hidden lg:flex items-center gap-10">
    {!isHome && (
      <a href="/" class="text-[0.7rem] font-medium uppercase tracking-[0.2em] text-gray-500 hover:text-black transition-colors">
        Inicio
      </a>
    )}
    <a href="#proyectos" class="text-[0.7rem] font-medium uppercase tracking-[0.2em] text-gray-500 hover:text-black transition-colors">
      Proyectos
    </a>
    <a href="/about" class="text-[0.7rem] font-medium uppercase tracking-[0.2em] text-gray-500 hover:text-black transition-colors">
      About
    </a>
  </nav>

  <!-- CTA Button (centered with logo) -->
  <a 
    href={links.calendar}
    class="cta-button bg-[#1A1A1A] text-white text-[0.7rem] font-medium uppercase tracking-widest rounded-full hover:bg-indigo-600 hover:scale-105 transition-all shadow-lg shadow-gray-300/50"
  >
    Agendar Consulta 
    <i data-lucide="arrow-up-right" class="w-3 h-3"></i>
  </a>
</header>

<style>
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 24px;
  }

  @media (min-width: 1024px) {
    .navbar {
      padding: 32px 48px 32px 32px;
    }
  }

  .logo {
    width: 84px;
    height: 84px;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .logo {
      width: 64px;
      height: 64px;
    }
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 14px 28px;
    line-height: 1;
    text-align: center;
  }
</style>
