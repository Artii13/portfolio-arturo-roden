---
import { links } from '@/data/projects';
---

<footer class="px-8 lg:px-16 py-12 border-t border-gray-200 reveal-fade">
  <div class="flex flex-col md:flex-row justify-between items-center gap-6">
    <!-- Logo -->
    <div class="flex items-center">
      <img 
        src="/images/logo.svg" 
        alt="Arturo Róden" 
        class="footer-logo"
        width="64"
        height="64"
      />
    </div>
    
    <!-- Social Links -->
    <div class="flex items-center gap-6">
      <a 
        href={links.instagram}
        target="_blank"
        rel="noopener noreferrer"
        class="text-xs uppercase tracking-widest text-gray-500 hover:text-indigo-600 transition-colors"
      >
        Instagram
      </a>
      <a 
        href={links.whatsapp}
        target="_blank"
        rel="noopener noreferrer"
        class="text-xs uppercase tracking-widest text-gray-500 hover:text-indigo-600 transition-colors"
      >
        WhatsApp
      </a>
    </div>
    
    <!-- Copyright -->
    <p class="text-xs text-gray-400 tracking-wider">
      © 2024 A. Róden · Link IA Lab
    </p>
  </div>
</footer>

<style>
  .footer-logo {
    width: 64px;
    height: 64px;
    object-fit: contain;
  }

  @media (max-width: 768px) {
    .footer-logo {
      width: 48px;
      height: 48px;
    }
  }
</style>
